<p id="notice">
 <%= notice %>
</p><h1>Books</h1>
<table>
 <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
    <th></th>
   </tr>
 </thead>
 <main>
  <section class="book">
   <div class="book-box"></div>
    <% @books.each do |book| %>
    <tr>
    <div class="book-item">
     <section class="book-text">
      <th>
      <h3 class="book-title"><%= book.title %></h3>
      </th>
      <th>
      <p class="book-body"><%= book.body %></p>
      </th>
      <th>
      <%= link_to "Show", book_path(book.id) %>
      <%= link_to "Edit", edit_book_path(book.id) %>
      <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure" %>
      </th>
      </tr>
      <% end %>
    </section>
   </div>
</section>

  </div>
 </main>
 </table>
<h2>New book</h2>
<%= form_with model:@book,local:true do |f| %>
   <% if @book.errors.any? %>
   <h3>入力した内容にerrorが<%= @book.errors.count %>件あります</h3>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
   </ul>
  <% end %>
   <ul>


    <h4>Title</h4><br/>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <br><%= f.submit 'Create Book' %></br>

<% end %>
