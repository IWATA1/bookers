<h1>Editing Book</h1>
<p id="notice">
  <%= notice %>
</p>

<%= form_with model:@book, local: true do |f| %>
<% if @book.errors.any? %>
   <h3>入力した内容にerrorが<%= @book.errors.count %>件あります</h3>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
   </ul>
  <% end %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_field :body %>
  <%= f.submit 'Update Book' %>
  <% end %>
 <%= link_to "Show", book_path(@book.id) %>
 <a href="/books">Back</a>